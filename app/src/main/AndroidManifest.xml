        <activity
            android:name=".Lisitngs"
            android:exported="true" />
        <activity
            android:name=".Apartments"
            android:exported="true" />
        <activity
            android:name=".logincustomer"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".register_customer"
            android:exported="true" />
        <activity
            android:name=".TryPhone"
